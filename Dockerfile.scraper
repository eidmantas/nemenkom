FROM python:3.13-slim

WORKDIR /app

# Install dependencies
COPY requirements-scraper.txt .
RUN pip install --no-cache-dir --use-deprecated=legacy-resolver -r requirements-scraper.txt

COPY services/scraper services/scraper
COPY services/common services/common
COPY services/scraper/migrations services/scraper/migrations

ENV PYTHONPATH=/app

CMD ["python", "services/scraper/scheduler.py"]
